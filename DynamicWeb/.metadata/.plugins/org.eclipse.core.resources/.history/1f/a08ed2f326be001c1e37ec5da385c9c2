	<script th:inline="javascript" type="text/javascript">
	
		window.onload = function() {
			/*<![CDATA[*/
			var sizeCart = /*[[${session.listCart.size}]]*/"ss";

			/*]]>*/
			var sum = 0;
			var total = 0
			for (let i = 1; i <= sizeCart; i++) {
				var a = i * 3 - 2;
				var b = i * 3 - 1;

				sum += Number(document.getElementById(a).innerHTML)
						* Number(document.getElementById(b).value);
				var id = i * 3
				document.getElementById(id).innerHTML = sum;
				total += sum;
				sum = 0;
			}
			document.getElementById("total").innerHTML = total;
			/* document.getElementById("sendOrder").style.display="block"; */
	}
		
		function rise(id){
			/*<![CDATA[*/
			var sizeCart = /*[[${session.listCart.size}]]*/"ss";

			/*]]>*/
			
			var number = id.substr(id.length - 1);
			
			var amount =document.getElementById(number).value;
			amount++;
			document.getElementById(number).value = amount;
			
			var idthanhtien = Number(number)+1;
			var idPrice = Number(number)-1;
			document.getElementById(idthanhtien).innerHTML = document.getElementById(idPrice).innerHTML*amount;
			
			var total = 0;
			for(let i = 1; i <= sizeCart; i++ ){
				var id = i * 3
				total += Number(document.getElementById(id).innerHTML);
			}
			document.getElementById("total").innerHTML = total;
		}
		
		function decrease(id){
			var number = id.substr(id.length - 1);
			
			var amount =document.getElementById(number).value;
			amount--;
			document.getElementById(number).value = amount;
			if(amount < 1){
				document.getElementById(number).style.display = none;
			}
			var idthanhtien = Number(number)+1;
			var idPrice = Number(number)-1;
			document.getElementById(idthanhtien).innerHTML = document.getElementById(idPrice).innerHTML*amount;
			
			var total = 0;
			for(let i = 1; i <= sizeCart; i++ ){
				var id = i * 3
				total += Number(document.getElementById(id).innerHTML);
			}
			document.getElementById("total").innerHTML = total;
		}
	</script>
	
	
