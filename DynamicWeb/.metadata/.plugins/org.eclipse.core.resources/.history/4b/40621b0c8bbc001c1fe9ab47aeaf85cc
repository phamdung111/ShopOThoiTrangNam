package ShopOThoiTrangNam.service;

import javax.transaction.Transactional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import ShopOThoiTrangNam.entity.ProductDetailsRepository;

@Repository
@Transactional
public interface ProductDetailsRepositoryService extends JpaRepository<ProductDetailsRepository, Integer>{
	@Query("select c from ProductDetailsRepository c where c.productDetails = ?1 and c.productDetailsRepositorySize = ?2")
	ProductDetailsRepository getProductDetailsRepositoryForCartDetails(int productDetailsId, String size);
}
